---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul
  class="grid mx-auto max-w-6xl ms:grid-cols-1 md:grid-cols-3 gap-4 mt-12 lg:grid lg:grid-cols-3 space-y-5 lg:space-y-0"
>
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20">
        <Item post={post} />
      </li>
    ))
  }
</ul>
